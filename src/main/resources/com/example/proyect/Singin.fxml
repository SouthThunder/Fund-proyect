<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="panelFormularioSingin" alignment="CENTER" prefHeight="411.0" prefWidth="482.0" stylesheets="@stylesheets/Signin.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyect.Controller_singin">
   <children>
      <Label text="Iniciar Sesion">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <VBox>
         <VBox.margin>
            <Insets left="50.0" right="50.0" />
         </VBox.margin>
         <children>
            <Label text="Usuario">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtUsuarioSingin" prefHeight="37.0" promptText="Ejem: Pepito@hola.com" styleClass="signindataentry">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label text="Contraseña">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <StackPane>
               <children>
                  <PasswordField fx:id="txtpasswordSingin" prefHeight="37.0" promptText="Ejem: 12345" styleClass="signindataentry">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </PasswordField>
                  <TextField fx:id="txtpasswordSinginMask" prefHeight="37.0" promptText="Ejem: 12345" styleClass="signindataentry" visible="false">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </StackPane>
            <CheckBox fx:id="checkViewpasswordSingin" mnemonicParsing="false" text="Ver Contraseña">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </CheckBox>
            <HBox alignment="TOP_CENTER">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <children>

                  <Button fx:id="btnSingin" mnemonicParsing="false" onAction="#sinIngUser" prefHeight="35.0" prefWidth="100.0" styleClass="signinactionbtns" text="Ingresar" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
