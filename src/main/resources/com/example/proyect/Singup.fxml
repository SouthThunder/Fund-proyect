<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="panelFormularioSingup" alignment="CENTER" prefHeight="474.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyect.Controller_singup">
   <children>
      <Label text="Formulario de Registro">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <VBox prefWidth="100.0">
         <children>
            <Label text="Correo Electronico">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtEmailSingup" prefHeight="30.0" promptText="Ejem: juanito12@hola.com">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label text="Numero Telefonico">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtNumeroSingup" prefHeight="30.0" promptText="Ejem: 3126770923">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <HBox>
               <children>
                  <VBox HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                     <children>
                        <Label text="Contraseña" />
                        <TextField fx:id="txtPassword" prefHeight="30.0" promptText="Ejem: 12345">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                     <children>
                        <Label text="Confirmar Contraseña" />
                        <TextField fx:id="txtConfirmPassword" prefHeight="30.0" promptText="Ejem: 12345">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <Label text="Nacionalidad">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <ComboBox fx:id="cbCountry" maxWidth="1.7976931348623157E308" prefHeight="30.0" style="-fx-background-color: trasparent; -fx-border-color: #d3d3d3;" visibleRowCount="5" />
            <HBox alignment="CENTER">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="btnSingUp" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #202C3F; -fx-background-radius: 10px; -fx-border-radius: 10px;" text="Registrar" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnCleanSingUp" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #202C3F; -fx-background-radius: 10px; -fx-border-radius: 10px;" text="Limpiar" textFill="WHITE">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets left="30.0" right="30.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
